sorts State;

signature
  init : Int->State, loop : Int Int->State, done : Int->State;

variables B : Bool, S : Int, N : Int, I : Int;

rewrite-system sum

  (init N) => (loop 0 N),

  (loop S N) /\ (mle 1 N) => (loop (mplus S N) (mminus N 1)),

  (loop S N) /\ (bnot (mle 1 N)) => (done S);

simplify (band true true);
